<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    tools:context=".expertActivity.SettingActivity">

    <RelativeLayout
        android:id="@+id/TitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/BackImageView"
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/basic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/UserInfoButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/TitleLayout"
        android:layout_marginTop="40dp"
        android:background="#ffffff">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="#dddddd" />

        <ImageView
            android:id="@+id/UserInfoImg"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/userinfo_item" />

        <TextView
            android:id="@+id/UserInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/UserInfoImg"
            android:text="个人信息"
            android:textColor="#000000"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:src="@mipmap/userinfo_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/UserInfoLine"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/UserInfoButton"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#dddddd" />

    <RelativeLayout
        android:id="@+id/ChangePasswordButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/UserInfoLine"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/ChangePasswordImg"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/password_item" />

        <TextView
            android:id="@+id/ChangePasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/ChangePasswordImg"
            android:text="修改密码"
            android:textColor="#000000"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:src="@mipmap/userinfo_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/ChangePasswordLine"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ChangePasswordButton"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#dddddd" />

    <RelativeLayout
        android:id="@+id/AboutButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/ChangePasswordLine"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/PermissionImg"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/permission_item" />

        <TextView
            android:id="@+id/PermissionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/PermissionImg"
            android:text="关于"
            android:textColor="#000000"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:src="@mipmap/userinfo_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/PermissionLine"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/AboutButton"
        android:background="#dddddd" />

    <RelativeLayout
        android:id="@+id/LogoutButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/PermissionLine"
        android:layout_marginTop="20dp"
        android:background="#ffffff">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="#dddddd" />

        <ImageView
            android:id="@+id/LogoutImg"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@mipmap/logout_item" />

        <TextView
            android:id="@+id/LogoutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/LogoutImg"
            android:text="退出登录"
            android:textColor="#000000"
            android:textSize="15dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#dddddd" />
    </RelativeLayout>


</RelativeLayout>

