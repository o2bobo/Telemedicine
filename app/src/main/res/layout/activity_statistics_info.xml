<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/commen_title" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_10"
        android:layout_marginTop="@dimen/standard_20"
        android:layout_marginRight="@dimen/standard_10"
        app:cardCornerRadius="@dimen/standard_10"
        app:cardElevation="@dimen/standard_20">

        <RadioGroup
            android:id="@+id/month_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/last_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/common_bg_color_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="@dimen/standard_10"
                android:paddingBottom="@dimen/standard_10"
                android:text="上月"
                android:textColor="@drawable/common_rg_color_selector"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/orange" />

            <RadioButton
                android:id="@+id/current_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/common_bg_color_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="@dimen/standard_10"
                android:paddingBottom="@dimen/standard_10"
                android:text="本月"
                android:textColor="@drawable/common_rg_color_selector"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/orange" />

            <RadioButton
                android:id="@+id/next_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/common_bg_color_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="@dimen/standard_10"
                android:paddingBottom="@dimen/standard_10"
                android:text="下月"
                android:textColor="@drawable/common_rg_color_selector"
                android:textStyle="bold" />
        </RadioGroup>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_250"
        android:layout_marginLeft="@dimen/standard_10"
        android:layout_marginTop="@dimen/standard_20"
        android:layout_marginRight="@dimen/standard_10"
        app:cardCornerRadius="@dimen/standard_10"
        app:cardElevation="@dimen/standard_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selected_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standard_20"
                android:gravity="center"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_name_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:text="" />

                <TextView
                    android:id="@+id/title_num_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_name_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:text="" />

                <TextView
                    android:id="@+id/title_num_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>