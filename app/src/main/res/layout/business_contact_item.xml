<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic_border_top_bottom">

        <ImageView
            android:id="@+id/UserHeadImageView"
            android:layout_width="52dp"
            android:layout_height="73dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"
            android:background="#ededed"
            android:src="@drawable/basic_image_user" />

        <ImageView
            android:layout_width="53dp"
            android:layout_height="73dp"
            android:layout_alignLeft="@id/UserHeadImageView"
            android:layout_alignTop="@id/UserHeadImageView"
            android:src="@drawable/basic_image_user_border" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/UserHeadImageView">

            <TextView
                android:id="@+id/NameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text=""
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PhoneTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/NameTextView"
                android:gravity="left|center_vertical"
                android:text="" />

            <TextView
                android:id="@+id/HospitalTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/PhoneTextView"
                android:gravity="left|center_vertical"
                android:text="" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
