<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    tools:context=".expertFragment.ConsultationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="43dp"
                        android:background="@drawable/basic_border_bottom"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="申请医生"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/SendSiteNameView"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:background="@drawable/basic_border_bottom"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="10dp"
                        android:text="" />

                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="43dp"
                        android:background="@drawable/basic_border_bottom"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="患者信息"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/PatientNameView"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:background="@drawable/basic_border_bottom"
                        android:gravity="center_vertical|left"
                        android:paddingLeft="10dp"
                        android:text="" />
                </TableRow>
            </TableLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@drawable/basic_border_top"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="病历摘要"
                    android:textStyle="bold" />

                <com.chinabsc.telemedicine.expert.myView.StretchyTextView
                    android:id="@+id/CaseSummaryTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/basic_border_bottom"
                    android:gravity="left|center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@drawable/basic_border_top"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="诊断及依据"
                    android:textStyle="bold" />

                <com.chinabsc.telemedicine.expert.myView.StretchyTextView
                    android:id="@+id/EvidenceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/basic_border_bottom"
                    android:gravity="left|center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@drawable/basic_border_top"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="治疗情况简介"
                    android:textStyle="bold" />

                <com.chinabsc.telemedicine.expert.myView.StretchyTextView
                    android:id="@+id/TreatmentTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/basic_border_bottom"
                    android:gravity="left|center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
