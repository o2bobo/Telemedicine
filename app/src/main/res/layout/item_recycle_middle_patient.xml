<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">
    <TextView
        android:id="@+id/sickbedNumber"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:paddingRight="4dp"
        android:background="@mipmap/water_bg"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:gravity="center"
        />
    <RelativeLayout
        android:id="@+id/LineLayout"
        android:layout_width="7dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp">

        <View
            android:id="@+id/TabSelectedView"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#6b000000" />
        <View
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/dot_normal" />

    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    >
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingLeft="5dp"
        android:paddingRight="10dp"

        android:textColor="@color/chat_black"
        android:textSize="@dimen/chat_14sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="出生日期"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/chat_12sp" />


        <TextView
            android:id="@+id/birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/text_gray"
            android:textSize="@dimen/chat_12sp" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="35dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="入院日期"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/chat_12sp" />

        <TextView
            android:id="@+id/inpatientDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/text_gray"
            android:textSize="@dimen/chat_12sp" />
    </LinearLayout>

</LinearLayout>

</LinearLayout>
