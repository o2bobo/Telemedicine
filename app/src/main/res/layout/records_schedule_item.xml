<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/DateTextView"
                android:layout_width="200dp"
                android:layout_height="43dp"
                android:background="@drawable/basic_border_top"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/StatusTextView"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:paddingRight="20dp"
                android:background="@drawable/basic_border_top"
                android:gravity="center_vertical|right"
                android:textSize="14sp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/SendSiteNameTitleView"
                android:layout_width="85dp"
                android:layout_height="43dp"
                android:background="@drawable/basic_border_top"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="要求专家"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/SendSiteNameView"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/basic_border_top"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text=""
                android:textSize="14sp" />

        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="85dp"
                android:layout_height="43dp"
                android:background="@drawable/basic_border_top"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="患者信息"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/PatientNameView"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/basic_border_top"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text=""
                android:textSize="14sp" />
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/PurposeTitleTextView"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:background="@drawable/basic_border_top_bottom"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="会诊目的"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/PurposeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/PurposeTitleTextView"
            android:background="@drawable/basic_border_top_bottom"
            android:gravity="left|center"
            android:padding="10dp"
            android:text=""
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>