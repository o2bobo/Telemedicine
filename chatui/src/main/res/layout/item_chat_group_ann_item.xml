<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/TimeTextView"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@drawable/chat_basic_border_top"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text=""
        android:textStyle="bold" />

    <TextView
        android:id="@+id/AnnTextView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/TimeTextView"
        android:background="@drawable/chat_basic_border_top_bottom"
        android:gravity="left|center"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/EditImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/chat_basic_image_edit"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/DelImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/chat_basic_image_del" />
    </LinearLayout>
</RelativeLayout>
