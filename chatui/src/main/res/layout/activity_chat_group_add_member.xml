<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bpb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:gravity="center_horizontal"

    tools:context="com.source.adnroid.comm.ui.activity.ChatGroupDetailsActivity">

    <com.source.adnroid.comm.ui.chatview.LoadingView
        android:id="@+id/mload"
        android:layout_width="@dimen/standard_100"
        android:layout_height="@dimen/standard_100"
        android:layout_centerInParent="true"
        bpb:shape="circle"
        bpb:singleSrcSize="@dimen/standard_20"
        bpb:speed="250"
        bpb:src="#6495ED" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/BackImageView"
                android:layout_width="@dimen/standard_24"
                android:layout_height="@dimen/standard_20"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/standard_10"
                android:layout_marginTop="@dimen/standard_10"
                android:layout_marginBottom="@dimen/standard_10"
                android:src="@drawable/chat_basic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="添加成员"
                android:textColor="#ffffff"
                android:textSize="@dimen/standard_18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <Spinner
            android:id="@+id/ProvinceSpinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_30"
            android:layout_marginTop="@dimen/standard_10"
            android:gravity="center"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/SiteSpinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_30"
            android:layout_marginTop="@dimen/standard_10"
            android:gravity="center"
            android:spinnerMode="dropdown" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
                android:id="@+id/add_member_Layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/swipe_target"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

            </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

