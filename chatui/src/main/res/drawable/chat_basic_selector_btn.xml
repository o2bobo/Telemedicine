<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <gradient android:endColor="#cbcbcb" android:startColor="#cbcbcb" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:endColor="#50b8df" android:startColor="#50b8df" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:endColor="#35a9f8" android:startColor="#35a9f8" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</selector>