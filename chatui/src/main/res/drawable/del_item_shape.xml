<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="#e64340" />
            <corners android:radius="5dp" />
            <stroke
                android:width="1dp"
                android:color="@color/gray" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">

        <shape>
            <solid android:color="@color/chat_red1" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</layer-list>
